@model List<Message>
@{
    Layout = "~/Views/MainLayout/Index.cshtml";
    ViewData["Title"] = "Gelen Kutusu";
}

<style>
    .is-read {
        background-color: #f0f0f0; /* soluk gri */
    }

    .mailbox-messages td {
        vertical-align: middle;
    }

    .mailbox-star a {
        cursor: pointer;
    }
</style>

<div class="col-md-9">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Gelen Kutusu</h3>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th> <!-- Checkbox -->
                            <th></th> <!-- Star -->
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th></th> <!-- Attachment -->
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var checkboxId = "check" + item.MessageId;
                            <tr class="@(item.is_read ? "is-read" : "")">
                                <td>
                                    <div class="icheck-primary">
                                        <input type="checkbox" value="" id="@checkboxId">
                                        <label for="@checkboxId"></label>
                                    </div>
                                </td>
                                <td class="mailbox-star">
                                    <a href="javascript:void(0)" class="toggle-star" data-id="@item.MessageId">
                                        <i class="fas fa-star @(item.is_important ? "text-warning" : "text-secondary")"></i>
                                    </a>
                                </td>
                                <td class="mailbox-name">
                                    <a href="/Message/MessageDetail/@item.MessageId">@item.Sender.FirstName @item.Sender.LastName</a>
                                </td>
                                <td class="mailbox-subject">
                                    <b>@item.Subject</b>
                                </td>
                                <td class="mailbox-attachment"></td>
                                <td class="mailbox-date">@item.SendDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll(".toggle-star").forEach(star => {
        star.addEventListener("click", function () {
            const messageId = this.dataset.id;
            const icon = this.querySelector("i");

            fetch(`/Message/ToggleImportant/${messageId}`, {
                method: "POST"
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    if (data.important) {
                        icon.classList.remove("text-secondary");
                        icon.classList.add("text-warning");
                    } else {
                        icon.classList.remove("text-warning");
                        icon.classList.add("text-secondary");
                    }
                }
            });
        });
    });
</script>
