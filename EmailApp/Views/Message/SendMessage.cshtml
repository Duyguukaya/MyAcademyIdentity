@model SendMessageViewModel
@{
    ViewData["Title"] = "SendMessage";
}

<h3>Yeni Messaj Gönder</h3>

<form method="post">
    <div class="form-group">
        <label>Alıcı Email</label>
        <input type="text" asp-for="ReciverEmail" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Konu</label>
        <input type="text" asp-for="Subject" class="form-control"required />
    </div>
    <div class="form-group">
        <label>Mesaj</label>
        <textarea asp-for="Body" class="form-control" rows="10" required></textarea>
    </div>
    <br />
    <button class="btn btn-primary">Gönder</button>
</form>

