@model SendMessageViewModel
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <form method="post">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title"> Yeni Mail Gönder</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
                <div class="form-group">
                    <input class="form-control" asp-for="ReciverEmail" placeholder="Kime:" required />
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Subject" placeholder="Konu:" required />
                </div>
                <div class="form-group">
                    <textarea asp-for="Body" class="form-control" style="height: 300px" required></textarea>
                </div>

        </div>
        <!-- /.card-body -->
            <div class="card-footer">
                <div class="float-right">
                    <button type="submit" name="actionType" value="draft" class="btn btn-info">
                        <i class="fas fa-pencil-alt"></i> Taslağa Kaydet
                    </button>
                    <button type="submit" name="actionType" value="send" class="btn btn-primary">
                        <i class="far fa-envelope"></i> Gönder
                    </button>
                </div>
                <a class="btn btn-danger" href="/Message/Index"><i class="fas fa-times"></i> Vazgeç</a>
            </div>

        <!-- /.card-footer -->
    </div>
    </form>
    <!-- /.card -->
</div>

