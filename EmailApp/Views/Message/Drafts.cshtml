@model List<Message>
@{
    ViewData["Title"] = "Drafts";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Taslaklar</h3>
        </div>

        <div class="card-body p-0">
         

            <div class="table-responsive mailbox-messages">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var draft in Model)
                        {
                            <tr>
                                <td>
                                    <div class="icheck-primary">
                                        <input type="checkbox" value="" id="check_@draft.MessageId">
                                        <label for="check_@draft.MessageId"></label>
                                    </div>
                                </td>
                                <td class="mailbox-star">
                                    <a href="javascript:void(0)" class="toggle-star" data-id="@draft.MessageId">
                                        <i class="fas fa-star @(draft.is_important ? "text-warning" : "text-secondary")"></i>
                                    </a>
                                </td>
                                <td class="mailbox-name">
                                    <a href="@Url.Action("MessageDetail", "Message", new { id = draft.MessageId })">
                                        @draft.Subject
                                    </a>
                                </td>
                                <td class="mailbox-subject">
                                    @if (draft.ReceiverId != 0)
                                    {
                                        <form method="post" asp-action="SendDraft" asp-controller="Message">
                                            <input type="hidden" name="id" value="@draft.MessageId" />
                                            <input type="hidden" name="receiverEmail" value="@draft.Receiver?.Email" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="far fa-paper-plane"></i> Gönder
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Alıcı yok, taslağı düzenleyin</span>
                                    }
                                </td>
                                <td class="mailbox-date">@draft.SendDate.ToShortDateString()</td>
                              
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll(".toggle-star").forEach(star => {
        star.addEventListener("click", function () {
            const messageId = this.dataset.id;
            const icon = this.querySelector("i");

            fetch(`/Message/ToggleImportant/${messageId}`, {
                method: "POST"
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    if (data.important) {
                        icon.classList.remove("text-secondary");
                        icon.classList.add("text-warning"); // ⭐️ sarı yap
                    } else {
                        icon.classList.remove("text-warning");
                        icon.classList.add("text-secondary"); // gri yap
                    }
                }
            });
        });
    });
</script>
