@model List<Message>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Important";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Yıldızlı Mesajlar</h3>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var important in Model)
                        {
                            <tr>
                                <td>
                                    <div class="icheck-primary">
                                        <input type="checkbox" value="" id="check_@important.MessageId">
                                        <label for="check_@important.MessageId"></label>
                                    </div>
                                </td>
                                <td class="mailbox-star">
                                    <a href="javascript:void(0)" class="toggle-star" data-id="@important.MessageId">
                                        <i class="fas fa-star @(important.is_important ? "text-warning" : "text-secondary")"></i>
                                    </a>
                                </td>
                                <td class="mailbox-name">
                                    <a href="@Url.Action("MessageDetail", "Message", new { id = important.MessageId })">
                                        @important.Subject
                                    </a>
                                </td>
                                <td class="mailbox-date">@important.SendDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- CSRF Token gizli input -->
<input type="hidden" id="antiForgeryToken"
       name="__RequestVerificationToken"
       value="@Antiforgery.GetAndStoreTokens(ViewContext.HttpContext).RequestToken" />

<script>
    document.querySelectorAll(".toggle-star").forEach(star => {
        star.addEventListener("click", function () {
            const messageId = this.dataset.id;
            const icon = this.querySelector("i");
            const token = document.getElementById("antiForgeryToken").value;

            fetch(`/Message/ToggleImportant/${messageId}`, {
                method: "POST",
                headers: {
                    "RequestVerificationToken": token
                }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    if (data.important) {
                        icon.classList.remove("text-secondary");
                        icon.classList.add("text-warning");
                    } else {
                        icon.classList.remove("text-warning");
                        icon.classList.add("text-secondary");
                    }
                }
            });
        });
    });
</script>
